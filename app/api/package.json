{
  "name": "api",
  "version": "1.0.0",
  "description": "API to interact with the db for file name locations",
  "main": "index.js",
  "author": "Jelani Jackson",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prestart": "yarn",
    "start": "nodemon -r dotenv/config ./src/index.ts",
    "prebuild": "yarn && rm -rf dist && rm -rf ../../infra/terraform/signed-api.zip",
    "build": "tsc",
    "postbuild": "ncp package.json dist/package.json && ncp private_key.pem dist/private_key.pem && yarn zip",
    "prezip": "cd dist && yarn --prod",
    "zip": "npx bestzip ../../infra/terraform/signed-api.zip dist/*"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.101",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/mime-types": "^2.1.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.6.3",
    "dotenv": "^16.0.1",
    "mongoose": "^6.5.1",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@aws-sdk/cloudfront-signer": "^3.127.0",
    "aws-lambda": "^1.0.7",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "dynamoose": "^2.8.6",
    "express": "^4.18.1",
    "mime-types": "^2.1.35",
    "serverless-http": "^3.0.1"
  }
}
